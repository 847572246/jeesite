<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jeesite.modules.multiple.dao.MultipleSelectionDao">
	
	<!-- 查询数据
	<select id="findList" resultType="MultipleSelection">
		SELECT ${sqlMap.column.toSql()}
		FROM ${sqlMap.table.toSql()}
		<where>
			${sqlMap.where.toSql()}
		</where>
		ORDER BY ${sqlMap.order.toSql()}
	</select> -->
	<select id="getmultiple" resultType="MultipleSelection">
		select * 
		from multiple_selection
		where status=0
		order by rand() limit 5
	</select>
	<select id="findmultiple" resultType="MultipleSelection">
		select * 
		from multiple_selection 
		where status=0 and id=#{id}
	</select>
</mapper>